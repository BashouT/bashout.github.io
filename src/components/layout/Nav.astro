---
import {
    getLangFromUrl,
    useTranslations,
    useTranslatedPath,
} from "../../i18n/utils";

import LanguagePicker from "../../components/LanguagePicker.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<nav>
    <div class="flex flex-col lg:flex-row lg:gap-3">
        <ul class="flex flex-row lg:gap-3">
            <li>
                <a href={translatePath("/")} class="">
                    {t("title")}
                </a>
            </li>
            <li>
                <a href={translatePath("/contact/")}>
                    {t("contact")}
                </a>
            </li>
        </ul>
        <LanguagePicker />
    </div>

    <style>
        nav {
            background-color: #abdee6;
            border-bottom: 5px solid black;
            width: 100%;
            font-size: 1.125rem;
            line-height: 1.75rem;
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }
    </style>
</nav>
